    {
      "name": "Articles",
      "item": [
        {
          "name": "GET /articles",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/articles?page=1&pageSize=10",
              "host": ["{{baseUrl}}"],
              "path": ["articles"],
              "query": [
                {"key": "page", "value": "1"},
                {"key": "pageSize", "value": "10"}
              ]
            }
          }
        },
        {
          "name": "GET /articles/:slugOrId",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/articles/{{articleIdOrSlug}}",
              "host": ["{{baseUrl}}"],
              "path": ["articles", "{{articleIdOrSlug}}"]
            }
          }
        },
        {
          "name": "POST /articles",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Mi artículo\",\n  \"slug\": \"mi-articulo\",\n  \"content\": \"Contenido con al menos 50 caracteres...\",\n  \"excerpt\": \"Resumen corto\",\n  \"authorId\": \"<AUTHOR_ID>\",\n  \"categoryId\": \"<CATEGORY_ID>\",\n  \"status\": \"DRAFT\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/articles",
              "host": ["{{baseUrl}}"],
              "path": ["articles"]
            }
          }
        },
        {
          "name": "PATCH /articles/:id",
          "request": {
            "method": "PATCH",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Título actualizado\",\n  \"status\": \"PUBLISHED\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/articles/{{articleId}}",
              "host": ["{{baseUrl}}"],
              "path": ["articles", "{{articleId}}"]
            }
          }
        },
        {
          "name": "DELETE /articles/:id",
          "request": {
            "method": "DELETE",
            "header": [
              {"key": "Authorization", "value": "Bearer {{accessToken}}"}
            ],
            "url": {
              "raw": "{{baseUrl}}/articles/{{articleId}}",
              "host": ["{{baseUrl}}"],
              "path": ["articles", "{{articleId}}"]
            }
          }
        }
